@model IEnumerable<PRCS.Models.BloodDonorInfo>

@{
    ViewBag.Title = "Index";
}
<body>
<h2>Index</h2>

   
      


<p>
    

    @using (Html.BeginForm())
    {

    <p>
        <div class="form-horizontal">
          
                
                <div class="col-md-4">

                    Donor No: @Html.TextBox("donorNo") <br /><br />

                
                </div>

                
                    <div class="col-md-4">
                        Blood Group: @Html.DropDownList("bloodGroup", "All")<br /><br />
                    </div>
               
                    <div class="col-md-4">
                        Name: @Html.TextBox("sName") <br /><br />
                    </div>
                
                    <div class="col-md-4">
                        <input type="submit" value="Filter" />
                    </div>
               
            </div>
</p> 
    }
</p>
<table class="table">
    <tr>
        
        
        <th>
            @Html.DisplayNameFor(model => model.DonorNo)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
       
        <th>
            @Html.DisplayNameFor(model => model.BloodGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastDonation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfDonation)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.District)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.TTIScreening)
        </th>
        
    </tr>

@foreach (var item in Model) {


      
        <tr>
           

            <td>
                @Html.DisplayFor(modelItem => item.DonorNo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDonation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfDonation)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.TTIScreening)
            </td>
           

            <td>
                @Html.ActionLink("More Details", "Details", new { id = item.ID })
               
            </td>
        </tr>
       
      
   
}

</table>
    @if (Model.Count() == 0)
    { <h3 style="color:red">No Result Found!</h3>}
   
    </body>